<h1>Login to TripCollaborator</h1>

<!-- Flash an error if there is no such user -->
<!-- form_tag because there is no model -->
<!-- session#create -->

<%= form_tag("/session", method: "post") do %>
  <%= label_tag(:email) %>
  <%= text_field_tag(:email) %>
  <%= label_tag(:password) %>
  <%= password_field_tag(:password) %>
  <%= submit_tag("Login") %>
<% end %>
