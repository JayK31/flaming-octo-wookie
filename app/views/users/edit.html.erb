<!-- app/views/users -->
<%= link_to('Home', root_path) %><br/>
<%= link_to('My Account Page', user_path(@user)) %><br/><br/>

<!-- normally would switch to render form, but in this case don't want user to be able to change password right now -->
<%= form_for(@user) do |f| %>
  <%= f.label(:name) %>
  <%= f.text_field(:name) %>
  <%= f.label(:email) %>
  <%= f.text_field(:email) %>
  <%= f.submit %>
<% end %>