<!-- create _form for items -->
<%= form_for([@trip, @item]) do |f| %>
  <%= hidden_field(:trip_id, @trip.id) %>
  <%= f.label(:name) %>
  <%= f.text_field(:name) %>
  <%= f.label(:quantity) %>
  <%= f.number_field(:quantity) %>
  <%= f.label(:description) %>
  <%= f.text_field(:description) %>
  <%= f.submit %>
<% end %>


