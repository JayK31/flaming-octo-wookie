<!-- app/views/items -->
<a href="/">Home</a><br/>
<h1>Items for <%= @trip.destination %></h1>
<% @items.each do |item| %>
    <% if @trip.id == item.trip_id %>
      <p>Item: <a href="items/<%= item.id %>"><%= item.name.capitalize %></a></p>
      <p>Description: <%= item.description %></p>
      <p>Is someone bringing this item?</p>
      <% if item.is_claimed? %>
        <p><strong>Yes, someone is bringing this item.</strong></p>
      <% else %>
        <p><strong>Nope, click on the item name to bring the item!</strong></p>
      <% end %>

    <% end %>
<% end %>

<a href="/">Home</a><br/>

