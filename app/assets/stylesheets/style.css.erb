body {
  background: url("index.jpg") no-repeat center;
  background-size: cover;
  color: white;
  height: 850px;
  width: 100%;
}

.welcome_links {
  color: blue;
}

.welcome_links:visited {
  color: orange;
}

.top-bar-section li {
  color: white;
  text-align: center;
}

.index h1 {
  text-align: center;
  color: white;
}

.name h1 {
  color: white;
}

.name h1 a:not(.button):hover {
background: black;
}

.small-5.columns {
  padding-top: 100px;
  color: white;
}

  
.sign-up-page, .login-page, .edit-user-page {
  width: 100%;
  text-align: center;
}

.sign-up-page h2, .login-page h2, .edit-user-page h2 {
  padding: 10px 0;
  margin: 0;
}

.sign-up-page p {
  text-align: center;
  padding: 0 0 5px 0;
}

/*Form Styling*/

.sign-up-form, .login-form, .edit-user-form {
  padding: 0;
  margin: 0 auto;
  text-align: center;
  margin-left: 475px;
}

.sign-up-form input, .login-form input, .edit-user-form input {
  border-radius: 5px;
}

.sign-up-form label, h2 {
  color: white;
}

.login-form label, h2 {
  color: white;
}

.edit-user-form label { 
  color: white;
}

.form-button {
  color: white;
  background: black;
}

.edit-user-form {
  margin-left: 350px;
}



/* ---- END Form Styling ---- 

/* User Show Page: Side Bar*/
div.small-3.columns {
  float: right;
  height: 500px;
  margin-top: 20px;
  margin-right: -70px;
  width: 300px;
}

div.small-3.columns h2 {
  text-align: center;
}

div.small-3.columns a {
  padding: 15px 5px;
  line-height: 45px;
  background: #b04a34;
  font-size: 0.8125em;
  font-weight: bold;
  text-align: center;
  font-family: inherit;
  color: white;
}

div.small-3.columns a:hover {
  background: black;
}

.update-delete li {
  list-style-type: none;
  display: inline;
}

.account-info li {
  display: block;
  text-align: center;
}

/*User Show Page - dashboard*/
div.small-9.columns {
  height: 500px;
  width: 500px;
  margin-top: 20px;

}

div.small-9.columns h2 {
  border-bottom: 1px solid white;
}

#view-trip-button { 
  display: inline;
  margin: 0;
  list-style-type: none;
  padding: 15px 5px;
  background: #b04a34;
  font-size: 0.8125em;
  font-weight: bold;
  text-align: center;
  font-family: inherit;
  color: white;
}

#view-trip-button a {
  color: white;
}

#view-trip-button:hover {
  background: black;
}

.trips h3 {
  color: white;
}

.trips {
  margin-top: 20px;
}

.trips a {
  color: white;
  /*text-decoration: underline; */
}

.trips section li {
  list-style-type: none;
  padding: 0;
  margin: 0;
}

.trips section p {
  padding: 0;
  margin: 0;
}

.title {
  text-decoration: underline;
}


/*---- END User Show Page -----*/


/* Start Trip Show Page */

.small-9.columns#trip-view { 
  height: 700px;
}

#trip-view h3 {
  border: none;
  color: white;
}

.small-3.columns.map {
  margin-right: 200px;
  margin-top: 100px;
  border: none;
}

#map-canvas {
  margin: 0;
  padding: 0;
  width: 600px;
  height: 400px;
  margin-right: 700px;
  margin-top: -80px;
}

#map-canvas img {
  max-width: none;
}

#directions {
  height: 500px;
  width: 500px;
  border: 1px solid black;
  float: right;
  margin-top: -270px;
  margin-right: 80px;
  overflow: scroll;
}

/*targeting annoying things on gmaps*/
.gm-style div {
  height: 1px;
  width: 1px;
}
/* ---- END Trip Show Page */

