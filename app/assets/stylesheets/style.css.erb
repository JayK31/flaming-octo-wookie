body {
  background: url("index.jpg") no-repeat center;
  background-size: cover;
  color: white;
  height: 850px;
  width: 100%;
}

.welcome_links {
  color: blue;
}

.welcome_links:visited {
  color: orange;
}

.top-bar-section li {
  color: white;
  text-align: center;
}

.index h1 {
  text-align: center;
  color: white;
}

.name h1 {
  color: white;
}

.name h1 a:not(.button):hover {
background: black;
}

.small-5.columns {
  padding-top: 100px;
  color: white;
}

  
.sign-up-page, .login-page {
  width: 100%;
  text-align: center;
}

.sign-up-page, .login-page h2 {
  padding: 10px 0;
  margin: 0;
}

.sign-up-page p {
  text-align: center;
  padding: 0 0 5px 0;
}

.sign-up-form, .login-form {
  padding: 0;
  margin: 0 auto;
  text-align: center;
  margin-left: 475px;
}

.sign-up-form input, .login-form input {
  border-radius: 5px;
}

.sign-up-form label, h2 {
  color: white;
}

.login-form label, h2 {
  color: white;
}

.form-button {
  color: white;
  background: black;
}

.user-show-page {
  height: 850px;
}

div.small-3.columns {
  float: right;
  border: 1px solid black;
  height: 500px;
  margin-top: 20px;
  margin-right: -70px;
  width: 300px;
}

div.small-3.columns h2 {
  text-align: center;
}

div.small-3.columns a {
  padding: 15px 5px;
  line-height: 45px;
  background: #b04a34;
  font-size: 0.8125em;
  font-weight: bold;
  text-align: center;
  font-family: inherit;
  color: white;
}

div.small-3.columns a:hover {
  background: black;
}

div.small-3.columns li {
  list-style-type: none;
  display: inline;
}

.edit-user-page {
  text-align: center;
}

.edit-user-page input {
  border-radius: 5px;
}

.edit-user-form {
  margin: 0 auto;
  padding: 0;
  margin-left: 350px;
}
.edit-user-form label {
  color: white;
}
